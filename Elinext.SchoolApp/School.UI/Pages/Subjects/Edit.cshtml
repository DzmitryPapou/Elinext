@page
@model School.UI.Pages.Subjects.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Subject.SubjectID" />
            <div class="form-group">
                <label asp-for="Subject.SubjectID" class="control-label"></label>
                <div>@Html.DisplayFor(model => model.Subject.SubjectID)</div>
            </div>
            <div class="form-group">
                <label asp-for="Subject.Title" class="control-label"></label>
                <input asp-for="Subject.Title" class="form-control" />
                <span asp-validation-for="Subject.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Subject.SchoolClass" class="control-label"></label>
                <select asp-for="Subject.SchoolClassID" class="form-control"
                        asp-items="@Model.SubjectNameSL"></select>
                <span asp-validation-for="Subject.SchoolClassID" class="text-danger"></span>
                </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
