@page "{id:int}"
@model School.UI.Pages.SchoolClasses.EditModel
@{
    ViewData["Title"] = "Edit";
}
<h2>Edit</h2>
<h4>SchoolClass</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="SchoolClass.SchoolClassID" />
            <div class="form-group">
                <label asp-for="SchoolClass.Name" class="control-label"></label>
                <input asp-for="SchoolClass.Name" class="form-control" />
                <span asp-validation-for="SchoolClass.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Teacher</label>
                <select asp-for="SchoolClass.TeacherID" class="form-control"
                        asp-items="@Model.TeacherNameSL"></select>
                <span asp-validation-for="SchoolClass.TeacherID" class="text-danger">
                </span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>
<div>
    <a asp-page="./Index">Back to List</a>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}